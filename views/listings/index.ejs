<%layout('/layouts/boilerplate')-%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 0.5em;
    margin-bottom: 0.5rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.2);
    transition: transform 0.2s ease-in-out;
  }

  /* Media queries */
  @media (max-width: 1200px) {
    .filter:nth-child(n+5) {
      display: none;
    }
  }

  @media (max-width: 992px) {
    .filter:nth-child(n+4) {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .filter:nth-child(n+3) {
      display: none;
    }
  }

  @media (max-width: 576px) {
    .filter:nth-child(n+2) {
      display: none;
    }
  }

  .card-columns {
    column-count: 3;
  }

  @media (max-width: 1400px) {
    .card-columns {
      column-count: 2;
    }
  }

  @media (max-width: 1000px) {
    .card-columns {
      column-count: 1;
    }
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    padding: 1rem 2rem;
    margin-left: 5rem;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    background-color: #f8f9fa;
  }

  .form-check-label {
    margin-left: 0.5rem;
  }
</style>

<body>
  <%= success %>
  <br>
  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-hotel"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-earth-americas"></i></div>
      <p>Iconic-cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome-alt"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-galactic-senate"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-sailboat"></i></div>
      <p>Boats</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>
  <br>
  <div class="card-columns">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing.id %>" class="listing-link">
        <div class="card" style="width: 25rem;">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing-image" style="height: 20rem;">
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %> </b><br>
              &#8377;<%= listing.price.toLocaleString("en-IN") %>/Night <i class="tax-info">+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
  <script>
    let taxswitch = document.getElementById('flexSwitchCheckDefault');
    taxswitch.addEventListener("click", () => {
      let taxinfo = document.querySelectorAll('.tax-info');
      taxinfo.forEach(info => {
        info.style.display = info.style.display === "inline" ? "none" : "inline";
      });
    });
  </script>
</body>
